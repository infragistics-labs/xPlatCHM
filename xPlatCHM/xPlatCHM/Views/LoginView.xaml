<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="login"
             x:Class="xPlatCHM.Views.LoginView"
             BackgroundColor="#0099ff">

    <ContentPage.Content>    
        <StackLayout VerticalOptions="CenterAndExpand" Padding="30" >
            <Image Source="caller.png" WidthRequest="150" HeightRequest="150"/>
            <Label Text="Infragenta" HorizontalOptions="Center" FontFamily="Roboto" FontSize="40" TextColor="White" Margin="0,0,0,30"/>
            <Entry x:Name="usernameEntry" Placeholder="Infragistics e-mail" FontFamily="Roboto" FontSize="16" TextColor="White" PlaceholderColor="White" Margin="0,0,0,15"/>
            <Entry  x:Name="passwordEntry" IsPassword="True" Placeholder="Password" FontFamily="Roboto" FontSize="16" TextColor="White" PlaceholderColor="White" Margin="0,0,0,15"/>
            <Button x:Name="btnLogin" Text="Login" Clicked="LoginBtn_Clicked" HorizontalOptions="Center" BackgroundColor="White" WidthRequest="420" HeightRequest="60"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>